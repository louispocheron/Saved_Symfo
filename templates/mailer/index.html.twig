{% extends 'base.html.twig' %}

{% block title %}Nous contacter{% endblock %}

{% block body %}
 <link href="{{ asset('css/mailer.css') }}" rel="stylesheet">


<div class="form-container">
    <div class="wrapper">
        <h1>NOUS CONTACTER</h1>
        {{ form_start(form) }}
        <div class="form-input">
            <label>Sujet</label>
            {{ form_widget(form.sujet) }}
        </div>
        <div class="form-input message">
            <label>Message</label>
            {{ form_widget(form.message) }}
        </div>
        <div class="form-input save">
            {{ form_widget(form.enregistrer) }}
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
