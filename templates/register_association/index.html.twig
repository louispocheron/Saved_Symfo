{% extends 'base.html.twig' %}

{% block title %}Nouvelle association !{% endblock %}

{% block body %}

 <link href="{{ asset('css/assocRegister.css') }}" rel="stylesheet">
    <div class="form-register-container">
        <h1>ENREGISTER UNE ASSOCIATION</h1>
        {{ form_start(form) }}
            <div class="form-register-row">
                <label>Nom de l'association</label>
                {{ form_widget(form.name) }}
            </div>
            <div class="form-register-row upload">
                <label>Logo de l'association</label>
                {{ form_widget(form.logo) }}
            </div>
            <div class="form-register-row">
                <label>Description de l'association</label>
                {{ form_widget(form.description) }}
            </div>
            <div class="form-register-row">
                <label>Numéro de siret</label>
                <div class='form-error'>
                    {{ form_errors(form.numeroSiret) }}
                </div>
                {{ form_widget(form.numeroSiret) }}
            </div>
            <div class="form-register-row">
                <label>Région</label>
                {{ form_widget(form.region) }}
            </div>
            <div class="form-register-row">
                <label>Numéro département</label>
                {{ form_widget(form.departement) }}
            </div>
            <div class="form-register-row last">
                {{ form_widget(form.enregister) }}
            </div>
        {{ form_end(form) }}
    </div>


{% endblock %}

